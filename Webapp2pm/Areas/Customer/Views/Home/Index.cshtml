@model IEnumerable<Product>

@{
    ViewData["Title"] = "Home Page";
}

<div class="container-fluid">
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4 p-5 p-sm-0">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card">
                    <img src=@item.ImageUrl class="card-img-top" alt=@item.Name style="height:200px">
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <h6>Rs.@item.Price</h6>
                        <a asp-action="Product" asp-route-productId ="@item.Id" class="btn btn-warning">View Details</a>
                    </div>
                </div>
            </div>
        }

    </div>
</div>
