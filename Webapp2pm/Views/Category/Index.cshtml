@model IEnumerable<Category>
@{
    ViewData["Title"] = "Categories";
    int count = 1;
}

<h1>Categories</h1>

<a class="btn btn-success" asp-controller="Category" asp-action="PostCategory">Add New Category</a>
@* <div class="bg-success text-white">

</div> *@
<br />

<table class="table w-50 text-center">
    <thead>
        <tr>
            <td>
                S.no
            </td>
            <td colspan="2">Category Name</td>
        </tr>
    <tbody>
            @foreach (var obj in Model)
            {
            <tr>
                <td>@(count++)</td>
                <td>@obj.CategoryName</td>
                <td>
                    <div class="btn-group">
                        <a asp-controller="Category" asp-action="UpdateCategory" asp-route-id=@obj.CategoryID class="btn btn-warning">Update</a>
                        <form asp-action="DeleteCategory" method="post" asp-route-id="@obj.CategoryID">
                            <button class="btn btn-primary" onclick="return confirm('Are you sure ?')">Delete</button>
                        </form>
                    </div>
                </td>
            </tr>
            }
    </tbody>
    </thead>
</table>


