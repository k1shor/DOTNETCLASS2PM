@model Category
@{
}


<h3>Update Category</h3>

<div asp-validation-summary="All"></div>
<form class="w-50 border border-3 p-5 rounded rounded-3" method="post" action="UpdateCategory">

    <input type="hidden" asp-for="CategoryID" />

    <label asp-for="CategoryName"></label>
    <input asp-for="CategoryName" class="form-control" />

    <button class="btn btn-success w-100 btn-sm mt-2">Update Category</button>
    <span asp-validation-for="CategoryName" class="text-danger fs-6"></span>
</form>

@section Scripts {
    <Partial name="_ValidationScriptsPartial" />
}