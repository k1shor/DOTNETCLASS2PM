@model Product

<h1>Add New Product</h1>
<form class="w-75 m-auto shadow-lg p-5" method="post">
    <div class="form-floating mb-2">
        <input asp-for="Name" class="form-control" placeholder="name"/>
        <label asp-for="Name"></label>
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form-floating mb-2">
        <input asp-for="Price" class="form-control" placeholder="name" type="number"/>
        <label asp-for="Price"></label>
        <span asp-validation-for="Price"></span>
    </div>
    <div class="form-floating mb-2">
        <textarea asp-for="Description" class="form-control" placeholder="name" style="height: 125px"></textarea>
        <label asp-for="Description"></label>
        <span asp-validation-for="Description"></span>
    </div>
    <div class="form-floating mb-2">
        <input asp-for="Stock" class="form-control" placeholder="name" />
        <label asp-for="Stock"></label>
        <span asp-validation-for="Stock"></span>
    </div>
    <div class="form-floating mb-2">
        <input asp-for="Category" class="form-control" placeholder="name" />
        <label asp-for="Category"></label>
    </div>
    <div class="form-floating mb-2">
        <input type="file" class="form-control" placeholder="name" />
        <label asp-for="ImageUrl">Product Image</label>
    </div>
    <button class="btn btn-success w-100">Add New Product</button>
</form>